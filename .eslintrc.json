{
  "extends": "airbnb-base",
  "rules": {
    "no-use-before-define": [
      1,
      "nofunc"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-param-reassign": "warn",
    "no-underscore-dangle": "warn",
    "new-cap": "warn",
    "no-console": "off"
  },
  //Commands to be ignored by the "not-defined" rule
  "globals": {
    // true to allow the variable to be overwritten or false to disallow overwriting
    // Mocha testing
    "describe": false,
    "it": false,
    // mongodb library
    "connect": false,
    "db": false,
    // Web browser variables
    "$": false,
    "window": false,
    "document": false,
    "navigator": false,
    "screen": false,
    "self": false,
    "confirm": false,
    "localStorage": false,
    // global ucivit variables
    "ucivitOptions": false,
    // Youtube API variable
    "YT": false
  }
}